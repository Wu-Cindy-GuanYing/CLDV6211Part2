@model VenueBookingSystem.Models.Venue

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <!--Step 7: Display the actual image instead of just showing the url-->
        <dt class="col-sm-2">
            Venue Image
        </dt>
        <dd class="col-sm-10"></dd>

        @if (!string.IsNullOrEmpty(Model.ImageURL))
            {
            <img src="@Model.ImageURL" alt="Venue Image" width="250" height="250" style="object-fit:cover; border-radius:8px;" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VenueID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
